<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.genenakagaki.ayudanki.fragment.MultipleChoiceFragment"
    android:paddingTop="@dimen/quiz_vertical_margin"
    android:paddingBottom="@dimen/quiz_vertical_margin">

    <TextView
        android:id="@+id/question_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/term_left_margin"
        android:layout_marginBottom="@dimen/term_bottom_margin"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/choice_row0_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/choice0_cardview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_margin_half"
            android:layout_marginBottom="@dimen/card_margin_half"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin_half"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="onChoiceClick"
            android:visibility="gone"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/choice_left_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/card_padding"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/choice1_cardview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_margin_half"
            android:layout_marginBottom="@dimen/card_margin_half"
            android:layout_marginLeft="@dimen/card_margin_half"
            android:layout_marginRight="@dimen/card_margin"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="onChoiceClick"
            android:visibility="gone"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/choice_right_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/card_padding"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choice_row1_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/choice2_cardview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_margin_half"
            android:layout_marginBottom="@dimen/card_margin_half"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin_half"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="onChoiceClick"
            android:visibility="gone"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@id/choice_left_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/card_padding"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/choice3_cardview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_margin_half"
            android:layout_marginBottom="@dimen/card_margin_half"
            android:layout_marginLeft="@dimen/card_margin_half"
            android:layout_marginRight="@dimen/card_margin"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="onChoiceClick"
            android:visibility="gone"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@id/choice_right_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/card_padding"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choice_row2_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/choice4_cardview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_margin_half"
            android:layout_marginBottom="@dimen/card_margin_half"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin_half"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="onChoiceClick"
            android:visibility="gone"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@id/choice_left_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/card_padding"
                android:textSize="16sp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/choice5_cardview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_margin_half"
            android:layout_marginBottom="@dimen/card_margin_half"
            android:layout_marginLeft="@dimen/card_margin_half"
            android:layout_marginRight="@dimen/card_margin"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="onChoiceClick"
            android:visibility="gone"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@id/choice_right_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/card_padding"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
